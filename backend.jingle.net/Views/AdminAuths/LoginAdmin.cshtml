
@{
    ViewData["Title"] = "Login Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-form">
    <div class="bg container-fluid">
        <img src="~/assets/img/bg2.jpg" alt="" class="col-md-12">
    </div>
    <div class="container ">
        <div class="row align-items-center justify-content-center ">
            <div class="col-md-12">
                <h1 class="text-center mb-2">Administrator Login</h1>
            </div>

            <div class="col-md-4 align-self-center">

                <form class="shadow-lg col-form login" asp-controller="AdminAuths" asp-action="LoginAdmin" method="post">
                    @if (ViewBag.Admin == "ZERO")
                    {
                        <div class="form-group">
                            <label for="exampleInputEmail1">Masterkey @ViewBag.Admin</label>
                            <input type="password" class="form-control" id="exampleInputEmail1" name="masterkey" aria-describedby="emailHelp">
                        </div>
                        <div style="display:block"><input type="text" name="admintype" value=@ViewBag.Admin /></div>
                    }
                    else
                    {


                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Troy@email.com">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password">
                        </div>
                    }
                    <button type="submit" class="btn btn-primary float-right">Login</button>
                </form>
            </div>
        </div>
    </div>
</section>

