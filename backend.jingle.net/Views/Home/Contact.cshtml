@model backend.jingle.net.Models.ContactMessage
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Contact";
}
<section class="section-form">
    <div class="bg container-fluid">
        <img src="~/assets/img/bg2.jpg" alt="" class="col-md-12">
    </div>
    <div class="container ">
        <div class="row align-items-center justify-content-center ">
            <div class="col-md-12">
                <h1 class="text-center mb-2">Kontak Kami</h1>
            </div>

            <div class="col-md-6 align-self-center">

                <form class="shadow-lg col-form" asp-controller="Home" asp-action="Contact" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nama </label>
                        <input type="text" class="form-control" id="exampleInputEmail1" name="Name" placeholder="Troy">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email </label>
                        <input type="text" class="form-control" id="exampleInputEmail1" name="EmailUser" placeholder="https://www.instagram.com/txx">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Pesan</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="Message" rows="3"></textarea>
                    </div>
                    <div style="display:none">
                        <input type="text" class="form-control" asp-for="IPAddress" value="@HttpContextAccessor.HttpContext.Connection.RemoteIpAddress.ToString()">
                    </div>
                    @ViewBag.Message
                    <button type="submit" class="btn btn-primary float-right">Kirim</button>
                </form>
            </div>
        </div>
    </div>
</section>
